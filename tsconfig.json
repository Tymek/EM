{
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"sourceMap": true,
		"target": "ESNext",
		"module": "es2015",
		"moduleResolution": "Bundler",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"paths": {
		  "https://d3js.org/d3.v7.min.js": [
			"./node_modules/@types/d3/index.d.ts"
		  ]
		}
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
